# MySub Manager - Nginx 反向代理配置示例
# 将此文件复制到 /etc/nginx/sites-available/subman
# 然后创建符号链接: sudo ln -s /etc/nginx/sites-available/subman /etc/nginx/sites-enabled/
# 最后重新加载 nginx: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name your_domain.com;  # 替换为你的域名或 IP

    # 日志
    access_log /var/log/nginx/subman_access.log;
    error_log /var/log/nginx/subman_error.log;

    # 客户端最大上传大小（用于文件导入）
    client_max_body_size 10M;

    location / {
        proxy_pass http://127.0.0.1:8501;
        proxy_http_version 1.1;
        
        # WebSocket 支持（Streamlit 需要）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 基本代理头
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # 缓冲设置
        proxy_buffering off;
    }

    # 静态文件缓存（可选）
    location /static {
        proxy_pass http://127.0.0.1:8501;
        proxy_cache_valid 200 1h;
        add_header Cache-Control "public, immutable";
    }
}

